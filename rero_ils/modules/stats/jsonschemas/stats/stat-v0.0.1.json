{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Stats",
  "description": "JSON schema for statistics.",
  "additionalProperties": false,
  "required": [
    "$schema",
    "pid",
    "values"
  ],
  "properties": {
    "$schema": {
      "title": "Schema",
      "description": "Schema to validate stats records against.",
      "type": "string",
      "minLength": 9,
      "default": "https://bib.rero.ch/schemas/stats/stat-v0.0.1.json"
    },
    "type": {
      "title": "Statistics type",
      "type": "string",
      "enum": [
        "billing",
        "librarian",
        "report"
      ]
    },
    "date_range": {
      "title": "Statistics date range",
      "type": "object"
    },
    "config_pid": {
      "title": "Report configuration pid.",
      "type": "string",
      "minLength": 1
    },
    "pid": {
      "title": "Stat ID.",
      "type": "string",
      "minLength": 1
    },
    "values": {
      "title": "Statistics",
      "type": "array",
      "minItems": 1,
      "items": {
        "title": "Statistic",
        "type": "object",
        "additionalProperties": true,
        "properties": {}
      }
    }
  }
}
