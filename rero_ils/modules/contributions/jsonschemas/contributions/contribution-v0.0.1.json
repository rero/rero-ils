{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Mef contribution",
  "description": "JSON schema for a mef contribution",
  "additionalProperties": false,
  "required": [
    "$schema",
    "pid",
    "sources",
    "type"
  ],
  "properties": {
    "$schema": {
      "title": "Schema",
      "description": "Schema to validate organisation records against.",
      "type": "string",
      "minLength": 9
    },
    "pid": {
      "title": "Library ID",
      "type": "string"
    },
    "id": {
      "title": "Library ID",
      "type": "string"
    },
    "type": {
      "title": "Agent type",
      "type": "string",
      "enum": [
        "bf:Organisation",
        "bf:Person"
      ]
    },
    "viaf_pid": {
      "title": "VIAF ID",
      "type": "string"
    },
    "sources": {
      "title": "Source authorities list",
      "type": "array",
      "uniqueItems": true,
      "minItems": 1,
      "maxItems": 4,
      "items": {
        "type": "string",
        "enum": [
          "rero",
          "gnd",
          "idref"
        ],
        "form": {
          "type": "selectWithSort",
          "options": [
            {
              "label": "rero",
              "value": "rero"
            },
            {
              "label": "gnd",
              "value": "gnd"
            },
            {
              "label": "idref",
              "value": "idref"
            }
          ]
        }
      }
    },
    "rero": {
      "title": "RERO authorities",
      "type": "object"
    },
    "gnd": {
      "title": "GND authorities",
      "type": "object"
    },
    "idref": {
      "title": "IdRef authorities",
      "type": "object"
    }
  }
}
