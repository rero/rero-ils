{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "ItemType",
  "description": "JSON schema for item_type.",
  "additionalProperties": false,
  "propertiesOrder": [
    "name",
    "description",
    "type",
    "negative_availability",
    "displayed_status",
    "circulation_information"
  ],
  "required": [
    "$schema",
    "pid",
    "name",
    "organisation",
    "type",
    "negative_availability"
  ],
  "properties": {
    "$schema": {
      "title": "Schema",
      "description": "Schema to validate item_type records against.",
      "type": "string",
      "minLength": 9,
      "default": "https://bib.rero.ch/schemas/item_types/item_type-v0.0.1.json"
    },
    "pid": {
      "title": "ItemType ID.",
      "type": "string",
      "minLength": 1
    },
    "name": {
      "title": "Name",
      "description": "Name of the ItemType.",
      "type": "string",
      "minLength": 1,
      "widget": {
        "formlyConfig": {
          "focus": true,
          "props": {
            "validation": {
              "validators": {
                "valueAlreadyExists": {
                  "term": "item_type_name"
                }
              },
              "messages": {
                "alreadyTakenMessage": "The item type name is already taken."
              }
            }
          }
        }
      }
    },
    "description": {
      "title": "Description",
      "description": "Description of the ItemType.",
      "type": "string",
      "minLength": 1
    },
    "type": {
      "title": "Type",
      "description": "Type of the circulation category.",
      "type": "string",
      "default": "standard",
      "enum": [
        "online",
        "standard"
      ],
      "widget": {
        "formlyConfig": {
          "type": "selectWithSort",
          "props": {
            "options": [
              {
                "value": "standard",
                "label": "standard"
              },
              {
                "value": "online",
                "label": "online"
              }
            ],
            "validation": {
              "validators": {
                "valueAlreadyExists": {
                  "remoteRecordType": "item_types",
                  "limitToValues": [
                    "online"
                  ]
                }
              },
              "messages": {
                "alreadyTakenMessage": "Another online item type exists in this organisation."
              }
            }
          }
        }
      }
    },
    "negative_availability": {
      "title": "Mark the items of this category as not available",
      "description": "If enabled, all items of this circulation category will be displayed as not available, with the red availability symbol.",
      "type": "boolean",
      "default": false
    },
    "displayed_status": {
      "title": "Displayed status",
      "type": "array",
      "description": "Short text displayed in the interface, for instance 'in acquisition' or 'missing'.",
      "minItems": 1,
      "items": {
        "title": "Status",
        "type": "object",
        "additionalProperties": false,
        "required": [
          "language",
          "label"
        ],
        "propertiesOrder": [
          "language",
          "label"
        ],
        "properties": {
          "language": {
            "$ref": "https://bib.rero.ch/schemas/common/ui-languages-v0.0.1.json#/language"
          },
          "label": {
            "title": "Label",
            "type": "string",
            "maxLength": 90,
            "minLength": 3,
            "widget": {
              "formlyConfig": {
                "props": {
                  "itemCssClass": "col-lg-10"
                }
              }
            }
          }
        },
        "widget": {
          "formlyConfig": {
            "props": {
              "containerCssClass": "row"
            }
          }
        }
      },
      "widget": {
        "formlyConfig": {
          "expressions": {
            "props.required": "field?.parent?.model && field.parent.model.negative_availability",
            "hide": "field?.parent?.model && !field.parent.model.negative_availability"
          },
          "props": {
            "validation": {
              "validators": {
                "uniqueValueKeysInObject": {
                  "keys": [
                    "language"
                  ]
                }
              },
              "messages": {
                "uniqueValueKeysInObjectMessage": "Only one label per language is allowed."
              }
            }
          }
        }
      }
    },
    "circulation_information": {
      "title": "Circulation information",
      "type": "array",
      "description": "This optional text is displayed in the public interface, for instance 'On-site consultation'",
      "minItems": 0,
      "items": {
        "type": "object",
        "title": "Information",
        "additionalProperties": false,
        "required": [
          "language",
          "label"
        ],
        "propertiesOrder": [
          "language",
          "label"
        ],
        "properties": {
          "language": {
            "$ref": "https://bib.rero.ch/schemas/common/ui-languages-v0.0.1.json#/language"
          },
          "label": {
            "title": "Label",
            "type": "string",
            "maxLength": 90,
            "minLength": 3,
            "widget": {
              "formlyConfig": {
                "props": {
                  "itemCssClass": "col-lg-10"
                }
              }
            }
          }
        },
        "widget": {
          "formlyConfig": {
            "props": {
              "containerCssClass": "row"
            }
          }
        }
      },
      "widget": {
        "formlyConfig": {
          "props": {
            "validation": {
              "validators": {
                "uniqueValueKeysInObject": {
                  "keys": [
                    "language"
                  ]
                }
              },
              "messages": {
                "uniqueValueKeysInObjectMessage": "Only one label per language is allowed."
              }
            }
          }
        }
      }
    },
    "organisation": {
      "title": "Organisation",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "$ref"
      ],
      "properties": {
        "$ref": {
          "title": "Organisation URI",
          "type": "string",
          "pattern": "^https://bib.rero.ch/api/organisations/.*?$"
        }
      }
    }
  }
}
