{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Acquisition order",
  "description": "JSON schema for Acquisition Order.",
  "additionalProperties": false,
  "propertiesOrder": [
    "vendor",
    "reference",
    "type",
    "description"
  ],
  "required": [
    "$schema",
    "pid",
    "vendor",
    "library",
    "reference",
    "type"
  ],
  "properties": {
    "$schema": {
      "title": "Schema",
      "description": "Schema to validate Acquisition Order records against.",
      "type": "string",
      "default": "https://bib.rero.ch/schemas/acq_orders/acq_order-v0.0.1.json",
      "pattern": "^https://bib.rero.ch/schemas/acq_orders/acq_order-v([0-9]+?\\.){3}json$"
    },
    "pid": {
      "title": "AcqOrder ID",
      "type": "string",
      "minLength": 1
    },
    "reference": {
      "title": "Reference",
      "type": "string",
      "minLength": 3,
      "form": {
        "validation": {
          "validators": {
            "valueAlreadyExists": {
              "term": "reference"
            }
          },
          "messages": {
            "alreadyTakenMessage": "This reference number already exists."
          }
        }
      }
    },
    "description": {
      "title": "Description",
      "type": "string",
      "minLength": 5
    },
    "type": {
      "title": "Type",
      "type": "string",
      "enum": [
        "serial",
        "monograph",
        "standing_order",
        "monographic_set",
        "planned_order",
        "multi_volume"
      ],
      "default": "monograph",
      "form": {
        "type": "selectWithSort",
        "options": [
          {
            "value": "monograph",
            "label": "monograph"
          },
          {
            "value": "serial",
            "label": "serial"
          },
          {
            "value": "standing_order",
            "label": "standing_order"
          },
          {
            "value": "monographic_set",
            "label": "monographic_set"
          },
          {
            "value": "planned_order",
            "label": "planned_order"
          },
          {
            "value": "multi_volume",
            "label": "multi_volume"
          }
        ]
      }
    },
    "currency": {
      "$ref": "https://bib.rero.ch/schemas/common/currency-v0.0.1.json#/currency"
    },
    "vendor": {
      "title": "Vendor",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "$ref"
      ],
      "properties": {
        "$ref": {
          "title": "Vendor URI",
          "type": "string",
          "pattern": "^https://bib.rero.ch/api/vendors/.*?$",
          "form": {
            "focus": true,
            "remoteOptions": {
              "type": "vendors"
            },
            "placeholder": "Choose a vendor",
            "templateOptions": {
              "label": ""
            }
          }
        }
      }
    },
    "library": {
      "title": "Library",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "$ref"
      ],
      "properties": {
        "$ref": {
          "title": "Library URI",
          "type": "string",
          "pattern": "^https://bib.rero.ch/api/libraries/.*?$"
        }
      }
    },
    "organisation": {
      "title": "Organisation",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "$ref"
      ],
      "properties": {
        "$ref": {
          "title": "Organisation URI",
          "type": "string",
          "pattern": "^https://bib.rero.ch/api/organisations/.*?$"
        }
      }
    }
  }
}
