{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Acquisition order",
  "description": "JSON schema for acquisition order.",
  "additionalProperties": false,
  "propertiesOrder": [
    "vendor",
    "order_number",
    "order_type",
    "order_status",
    "currency",
    "order_date",
    "description"
  ],
  "required": [
    "$schema",
    "pid",
    "vendor",
    "library",
    "order_number",
    "order_type",
    "order_status",
    "currency"
  ],
  "properties": {
    "$schema": {
      "title": "Schema",
      "description": "Schema to validate acquisition order records against.",
      "type": "string",
      "default": "https://ils.rero.ch/schemas/acq_orders/acq_order-v0.0.1.json",
      "pattern": "^https://ils.rero.ch/schemas/acq_orders/acq_order-v([0-9]+?\\.){3}json$"
    },
    "pid": {
      "title": "Acquisition order ID",
      "type": "string",
      "minLength": 1
    },
    "order_number": {
      "title": "Order number",
      "type": "string",
      "minLength": 3,
      "form": {
        "validation": {
          "validators": {
            "valueAlreadyExists": {
              "term": "order_number"
            }
          },
          "messages": {
            "alreadyTakenMessage": "This order number is already in use."
          }
        }
      }
    },
    "order_type": {
      "title": "Order type",
      "type": "string",
      "enum": [
        "serial",
        "monograph",
        "standing_order",
        "monographic_set",
        "planned_order",
        "multi_volume"
      ],
      "default": "monograph",
      "form": {
        "type": "selectWithSort",
        "options": [
          {
            "value": "monograph",
            "label": "monograph"
          },
          {
            "value": "serial",
            "label": "serial"
          },
          {
            "value": "standing_order",
            "label": "standing_order"
          },
          {
            "value": "monographic_set",
            "label": "monographic_set"
          },
          {
            "value": "planned_order",
            "label": "planned_order"
          },
          {
            "value": "multi_volume",
            "label": "multi_volume"
          }
        ]
      }
    },
    "description": {
      "title": "Description",
      "type": "string",
      "minLength": 5
    },
    "order_status": {
      "title": "Order status",
      "type": "string",
      "enum": [
        "approved",
        "canceled",
        "ordered",
        "requested",
        "pending",
        "received"
      ],
      "default": "pending",
      "form": {
        "type": "selectWithSort",
        "options": [
          {
            "value": "approved",
            "label": "approved"
          },
          {
            "value": "canceled",
            "label": "canceled"
          },
          {
            "value": "ordered",
            "label": "ordered"
          },
          {
            "value": "requested",
            "label": "requested"
          },
          {
            "value": "pending",
            "label": "pending"
          },
          {
            "value": "received",
            "label": "received"
          }
        ]
      }
    },
    "currency": {
      "title": "Currency",
      "type": "string",
      "enum": [
        "CHF",
        "EUR",
        "USD"
      ],
      "form": {
        "type": "selectWithSort"
      },
      "default": "CHF"
    },
    "order_date": {
      "title": "Date",
      "type": "string",
      "format": "date",
      "pattern": "^[0-9]{4}-(0[1-9]|1[0-2])-(0[1-9]|[12][0-9]|3[01])$",
      "form": {
        "type": "datepicker",
        "placeholder": "Select a date",
        "validation": {
          "messages": {
            "patternMessage": "Should be in the following format: 2022-12-31 (YYYY-MM-DD)."
          }
        }
      }
    },
    "total_amount": {
      "title": "Total amount",
      "type": "number",
      "minLength": 1,
      "default": 0
    },
    "vendor": {
      "title": "Vendor",
      "type": "object",
      "required": [
        "$ref"
      ],
      "properties": {
        "$ref": {
          "title": "Vendor URI",
          "type": "string",
          "pattern": "^https://ils.rero.ch/api/vendors/.*?$",
          "form": {
            "focus": true,
            "remoteOptions": {
              "type": "vendors"
            },
            "placeholder": "Choose a vendor",
            "templateOptions": {
              "label": ""
            }
          }
        }
      }
    },
    "library": {
      "title": "Library",
      "type": "object",
      "properties": {
        "$ref": {
          "title": "Library URI",
          "type": "string",
          "pattern": "^https://ils.rero.ch/api/libraries/.*?$"
        }
      }
    },
    "organisation": {
      "title": "Organisation",
      "type": "object",
      "properties": {
        "$ref": {
          "title": "Organisation URI",
          "type": "string",
          "pattern": "^https://ils.rero.ch/api/organisations/.*?$"
        }
      }
    }
  }
}
