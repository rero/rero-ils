{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Location",
  "description": "JSON schema for an location",
  "additionalProperties": false,
  "required": [
    "$schema",
    "pid",
    "code",
    "name",
    "library"
  ],
  "properties": {
    "$schema": {
      "title": "Schema",
      "description": "Schema to validate organisation records against.",
      "type": "string",
      "minLength": 9
    },
    "pid": {
      "title": "Location ID",
      "type": "string"
    },
    "code": {
      "title": "Code",
      "description": "Code of the location.",
      "type": "string"
    },
    "name": {
      "title": "Name",
      "description": "Name of the location.",
      "type": "string",
      "minLength": 1
    },
    "is_pickup": {
      "title": "Designate this location as pickup location",
      "type": "boolean",
      "default": false,
      "description": "Qualify this location as a pickup location."
    },
    "pickup_name": {
      "title": "Name of location if pickup",
      "type": "string",
      "description": "Name of the pickup location."
    },
    "library": {
      "title": "Library",
      "type": "object",
      "properties": {
        "$ref": {
          "title": "Library URI",
          "pattern": "^http://ils.rero.ch/api/libraries/.*?$"
        }
      }
    }
  }
}