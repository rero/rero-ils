{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Patron transaction event",
  "description": "JSON schema for patron transaction event.",
  "required": [
    "$schema",
    "pid",
    "creation_date",
    "parent",
    "type"
  ],
  "properties": {
    "$schema": {
      "title": "Schema",
      "description": "Schema to validate patron transaction event records against.",
      "type": "string",
      "minLength": 9,
      "default": "https://ils.rero.ch/schema/patron_transaction_events/patron_transaction_event-v0.0.1.json"
    },
    "pid": {
      "title": "Patron transaction event ID",
      "type": "string",
      "minLength": 1
    },
    "parent": {
      "title": "Parent patron transaction",
      "type": "object",
      "properties": {
        "$ref": {
          "title": "Patron transaction URI",
          "type": "string",
          "pattern": "^https://ils.rero.ch/api/patron_transactions/.*?$"
        }
      }
    },
    "creation_date": {
      "title": "Creation date",
      "type": "string",
      "format": "date-time"
    },
    "amount": {
      "title": "Amount",
      "type": "number",
      "minimum": 0
    },
    "type": {
      "title": "Type",
      "type": "string"
    },
    "subtype": {
      "title": "Subtype",
      "type": "string"
    },
    "note": {
      "title": "Note",
      "type": "string",
      "minLength": 3
    },
    "library": {
      "title": "Library",
      "type": "object",
      "properties": {
        "$ref": {
          "title": "Library URI",
          "type": "string",
          "pattern": "^https://ils.rero.ch/api/libraries/.*?$"
        }
      }
    },
    "operator": {
      "title": "Operator",
      "type": "object",
      "properties": {
        "$ref": {
          "title": "Operator patron URI",
          "type": "string",
          "pattern": "^https://ils.rero.ch/api/patrons/.*?$"
        }
      }
    }
  },
  "oneOf": [
    {
      "$ref": "#/definitions/fee"
    },
    {
      "$ref": "#/definitions/payment"
    },
    {
      "$ref": "#/definitions/dispute"
    },
    {
      "$ref": "#/definitions/cancel"
    }
  ],
  "definitions": {
    "fee": {
      "properties": {
        "type": {
          "enum": [
            "fee"
          ]
        },
        "subtype": {
          "enum": [
            "overdue",
            "damaged",
            "lost",
            "other"
          ]
        }
      },
      "required": [
        "subtype",
        "amount"
      ]
    },
    "payment": {
      "properties": {
        "type": {
          "enum": [
            "payment"
          ]
        },
        "subtype": {
          "enum": [
            "cash",
            "debit_card",
            "credit_card",
            "paypal"
          ]
        }
      },
      "required": [
        "subtype",
        "operator",
        "amount"
      ]
    },
    "dispute": {
      "properties": {
        "type": {
          "enum": [
            "dispute"
          ]
        }
      },
      "required": [
        "operator",
        "note"
      ]
    },
    "cancel": {
      "properties": {
        "type": {
          "enum": [
            "cancel"
          ]
        }
      },
      "required": [
        "operator",
        "amount",
        "note"
      ]
    }
  }
}
