{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Notification",
  "description": "JSON schema for notifications.",
  "additionalProperties": false,
  "required": [
    "$schema",
    "pid",
    "notification_type"
  ],
  "definitions": {
    "circulation_context": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "loan"
      ],
      "properties": {
        "loan": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "$ref"
          ],
          "properties": {
            "$ref": {
              "type": "string",
              "pattern": "^https://bib.rero.ch/api/loans/.*?$"
            }
          }
        },
        "reminder_counter": {
          "type": "integer",
          "title": "Current reminder count"
        }
      }
    },
    "acquisition_context": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "order",
        "recipients"
      ],
      "properties": {
        "order": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "$ref"
          ],
          "properties": {
            "$ref": {
              "type": "string",
              "pattern": "^https://bib.rero.ch/api/acq_orders/.*?$"
            }
          }
        },
        "recipients": {
          "title": "Recipient email addresses",
          "type": "array",
          "minItems": 1,
          "items": {
            "title": "Recipient",
            "type": "object",
            "additionalProperties": false,
            "required": [
              "type",
              "address"
            ],
            "properties": {
              "type": {
                "title": "Recipient type",
                "type": "string",
                "enum": [
                  "to",
                  "cc",
                  "bcc",
                  "reply_to"
                ]
              },
              "address": {
                "type": "string",
                "format": "email",
                "pattern": "^.*@.*\\..+$"
              }
            }
          }
        }
      }
    }
  },
  "properties": {
    "$schema": {
      "title": "Schema",
      "description": "Schema to validate notifications records against.",
      "type": "string",
      "minLength": 9,
      "default": "https://bib.rero.ch/schemas/notifications/notification-v0.0.1.json"
    },
    "pid": {
      "title": "Notification ID",
      "type": "string",
      "minLength": 1
    },
    "creation_date": {
      "type": "string",
      "format": "date-time",
      "title": "Notification creation date"
    },
    "process_date": {
      "type": "string",
      "format": "date-time",
      "title": "Notification processing date"
    },
    "notification_sent": {
      "type": "boolean",
      "title": "Notification sent or not"
    },
    "reminder_counter": {
      "type": "integer",
      "title": "Current reminder count"
    },
    "status": {
      "title": "Status",
      "type": "string",
      "default": "created",
      "enum": [
        "created",
        "cancelled",
        "done"
      ]
    },
    "notification_type": {
      "title": "Notification type",
      "description": "The type of the notification.",
      "type": "string",
      "enum": [
        "due_soon",
        "overdue",
        "availability",
        "at_desk",
        "recall",
        "transit_notice",
        "request",
        "booking",
        "acquisition_order"
      ]
    },
    "effective_recipients": {
      "title": "Effective notification recipients",
      "description": "Where the notification were really dispatched",
      "type": "array",
      "minItems": 1,
      "items": {
        "title": "Recipient",
        "type": "object",
        "additionalProperties": false,
        "required": [
          "type",
          "address"
        ],
        "properties": {
          "type": {
            "title": "Recipient type",
            "type": "string",
            "enum": [
              "to",
              "cc",
              "bcc",
              "reply_to"
            ]
          },
          "address": {
            "type": "string",
            "format": "email",
            "pattern": "^.*@.*\\..+$"
          }
        }
      }
    },
    "context": {
      "oneOf": [
        {
          "$ref": "#/definitions/circulation_context"
        },
        {
          "$ref": "#/definitions/acquisition_context"
        }
      ]
    }
  }
}
