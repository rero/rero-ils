{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Item",
  "description": "JSON schema for an item.",
  "additionalProperties": false,
  "required": [
    "$schema",
    "pid",
    "barcode",
    "call_number",
    "location_pid",
    "item_type_pid"
  ],
  "properties": {
    "$schema": {
      "title": "Schema",
      "description": "Schema to validate item records against.",
      "type": "string",
      "minLength": 9
    },
    "pid": {
      "title": "Item ID",
      "type": "string",
      "minLength": 1
    },
    "barcode": {
      "title": "Barcode",
      "description": "Barcode of the item.",
      "type": "string",
      "minLength": 4
    },
    "call_number": {
      "title": "Call number",
      "description": "Call number of the item.",
      "type": "string",
      "minLength": 4
    },
    "location_pid": {
      "title": "Location",
      "description": "Location of the item.",
      "type": "string",
      "minLength": 1
    },
    "item_type_pid": {
      "title": "Item type",
      "description": "Item type of the item.",
      "type": "string"
    },
    "available": {
      "title": "Item availability",
      "type": "boolean",
      "default": false
    },
    "item_status": {
      "type": "string",
      "default": "on_shelf",
      "enum": [
        "on_shelf",
        "on_loan",
        "missing",
        "in_transit",
        "at_desk",
        "excluded"
      ]
    }
  }
}
