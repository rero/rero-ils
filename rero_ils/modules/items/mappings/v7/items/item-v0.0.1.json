{
  "settings": {
    "number_of_shards": 8,
    "number_of_replicas": 1,
    "max_result_window": 20000,
    "analysis": {
      "filter": {
        "autocomplete_filter": {
          "type": "edge_ngram",
          "min_gram": 1,
          "max_gram": 20
        }
      },
      "analyzer": {
        "autocomplete": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "autocomplete_filter"
          ]
        }
      }
    }
  },
  "mappings": {
    "date_detection": false,
    "numeric_detection": false,
    "properties": {
      "$schema": {
        "type": "keyword"
      },
      "pid": {
        "type": "keyword"
      },
      "barcode": {
        "type": "keyword",
        "copy_to": "autocomplete_barcode"
      },
      "autocomplete_barcode": {
        "type": "text",
        "analyzer": "autocomplete",
        "search_analyzer": "standard"
      },
      "call_number": {
        "type": "keyword"
      },
