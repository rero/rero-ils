{
  "scale": {
    "title": "Scales",
    "description": "Ratio of the dimensions of an image or three-dimensional form to the dimensions of the thing that is represented. (MARC 034, 255)",
    "type": "array",
    "minItems": 1,
    "items": {
      "title": "Scale",
      "type": "object",
      "propertiesOrder": [
        "type",
        "label",
        "ratio_linear_horizontal",
        "ratio_linear_vertical"
      ],
      "properties": {
        "type": {
          "title": "Type",
          "type": "string",
          "enum": [
            "Linear scale",
            "Angular scale",
            "Other"
          ],
          "widget": {
            "formlyConfig": {
              "type": "selectWithSort",
              "props": {
                "options": [
                  {
                    "label": "Linear scale",
                    "value": "Linear scale"
                  },
                  {
                    "label": "Angular scale",
                    "value": "Angular scale"
                  },
                  {
                    "label": "Other",
                    "value": "Other"
                  }
                ]
              }
            }
          }
        },
        "ratio_linear_horizontal": {
          "title": "Horizontal scale",
          "description": "Enter only the denominator.",
          "type": "integer",
          "minimum": 1,
          "widget": {
            "formlyConfig": {
              "props": {
                "placeholder": "Example: 25000"
              }
            }
          }
        },
        "ratio_linear_vertical": {
          "title": "Vertical scale",
          "description": "Enter only the denominator.",
          "type": "integer",
          "minimum": 1,
          "widget": {
            "formlyConfig": {
              "props": {
                "placeholder": "Example: 250"
              }
            }
          }
        },
        "label": {
          "title": "Label",
          "description": "Scale designation (MARC 255$a)",
          "type": "string",
          "minLength": 1,
          "widget": {
            "formlyConfig": {
              "props": {
                "placeholder": "Example: Scale 1:25 000"
              }
            }
          }
        }
      }
    },
    "widget": {
      "formlyConfig": {
        "props": {
          "hide": true
        }
      }
    }
  },
  "cartographicAttributes": {
    "title": "Cartographic data",
    "type": "array",
    "minItems": 1,
    "items": {
      "title": "Cartographic data",
      "type": "object",
      "propertiesOrder": [
        "coordinates",
        "projection",
        "equinox"
      ],
      "properties": {
        "coordinates": {
          "title": "Coordinates",
          "type": "object",
          "propertiesOrder": [
            "label",
            "longitude",
            "latitude",
            "declination",
            "rightAscension"
          ],
          "properties": {
            "label": {
              "title": "Label",
              "type": "string",
              "minLength": 1
            },
            "longitude": {
              "title": "Longitude",
              "description": "Enter one value, or two values (westernmost then easternmost) separated by a space.",
              "type": "string",
              "pattern": "^[EW0-9.+-]+(\\s[EW0-9.+-]+)?",
              "widget": {
                "formlyConfig": {
                  "props": {
                    "placeholder": "Example: W1800000 E1800000"
                  }
                }
              }
            },
            "latitude": {
              "title": "Latitude",
              "description": "Enter one value, or two values (northernmost then southernmost) separated by a space.",
              "type": "string",
              "pattern": "^[NS0-9.+-]+(\\s[NS0-9.+-]+)?",
              "widget": {
                "formlyConfig": {
                  "props": {
                    "placeholder": "Example: N0251500 N0221000"
                  }
                }
              }
            },
            "declination": {
              "title": "Declination",
              "description": "Use the format hdddmmss (hemisphere-degrees-minutes-seconds). Enter one value, or two values separated by a space.",
              "type": "string",
              "pattern": "^((N|S)\\d{7})(\\s(N|S)\\d{7})?",
              "widget": {
                "formlyConfig": {
                  "props": {
                    "placeholder": "Example: N0300000"
                  }
                }
              }
            },
            "rightAscension": {
              "title": "Right ascension",
              "description": "Use the format hhmmss (hour-minute-seconds). Enter one value, or two values separated by a space.",
              "type": "string",
              "pattern": "^\\d{6}(\\s\\d{6})?",
              "widget": {
                "formlyConfig": {
                  "props": {
                    "placeholder": "Example: 021800"
                  }
                }
              }
            }
          }
        },
        "projection": {
          "title": "Projection",
          "type": "string",
          "minLength": 3,
          "widget": {
            "formlyConfig": {
              "props": {
                "placeholder": "Chamberlin trimetric projection"
              }
            }
          }
        },
        "equinox": {
          "title": "Equinox",
          "description": "Enter only a year (yyyy) or year and month (yyyy.mm).",
          "type": "string",
          "pattern": "^\\d{4}(\\.\\d\\d)?",
          "widget": {
            "formlyConfig": {
              "props": {
                "placeholder": "Example: 1950"
              }
            }
          }
        }
      }
    },
    "widget": {
      "formlyConfig": {
        "props": {
          "hide": true
        }
      }
    }
  }
}