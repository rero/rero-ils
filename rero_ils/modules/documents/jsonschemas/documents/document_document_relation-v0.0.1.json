  "definitions": {
    "document": {
      "title": "Document link",
      "type": "object",
      "additionalProperties": false,
      "propertiesOrder": [
        "$ref"
      ],
      "required": [
        "$ref"
      ],
      "properties": {
        "$ref": {
          "type": "string",
          "pattern": "^https://bib.rero.ch/api/documents/.*?$",
          "widget": {
            "formlyConfig": {
              "type": "remoteAutoComplete",
              "props": {
                "scrollHeight": "400px",
                "validation": {
                  "messages": {
                    "patternMessage": "Should be in the following format: https://bib.rero.ch/api/documents/<PID>."
                  }
                },
                "queryOptions": {
                  "type": "documents",
                  "filter": "NOT harvested:true"
                },
                "placeholder": "Example: https://bib.rero.ch/api/documents/66"
              }
            }
          }
        }
      }
    },
    "label": {
      "title": "Label",
      "type": "object",
      "additionalProperties": false,
      "propertiesOrder": [
        "label",
        "identifiedBy"
      ],
      "required": [
        "label"
      ],
      "properties": {
        "label": {
          "type": "string",
          "minLength": 1
        },
        "identifiedBy": {
          "$ref": "https://bib.rero.ch/schemas/documents/document_identified_by-v0.0.1.json#/identifiedBy"
        }
      }
    }
  }
