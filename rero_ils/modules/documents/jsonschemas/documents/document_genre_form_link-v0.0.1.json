{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Link to a genre, form",
  "type": "object",
  "additionalProperties": false,
  "propertiesOrder": [
    "$ref"
  ],
  "required": [
    "$ref"
  ],
  "properties": {
    "$ref": {
      "title": "Genre, form",
      "type": "string",
      "pattern": "^(https://mef.rero.ch/api/concepts/(gnd|idref|rero)/.*|https://bib.rero.ch/api/local_entities/.*?)$",
      "widget": {
        "formlyConfig": {
          "type": "entity-autocomplete",
          "props": {
            "scrollHeight": "50vh",
            "group": true,
            "filters": {
              "selected": "concepts_genreForm",
              "options": [
                {
                  "label": "Genre, form",
                  "value": "concepts_genreForm"
                }
              ]
            },
            "queryOptions": {
              "type": "mef"
            }
          }
        }
      }
    },
    "pid": {
      "title": "MEF ID",
      "type": "string",
      "minLength": 1
    }
  }
}
