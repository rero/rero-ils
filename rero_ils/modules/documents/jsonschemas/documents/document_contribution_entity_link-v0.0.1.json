{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Link to an agent",
  "type": "object",
  "description": "Link to a remote or local entity of type person, family or corporate body (including conferences).",
  "additionalProperties": false,
  "propertiesOrder": [
    "$ref"
  ],
  "required": [
    "$ref"
  ],
  "properties": {
    "$ref": {
      "title": "Agent",
      "type": "string",
      "pattern": "^(https://mef.rero.ch/api/agents/(gnd|idref|rero)/.*|https://bib.rero.ch/api/local_entities/.*?)$",
      "widget": {
        "formlyConfig": {
          "type": "entity-autocomplete",
          "props": {
            "scrollHeight": "600px",
            "group": true,
            "filters": {
              "selected": "bf:Person",
              "options": [
                {
                  "label": "Person",
                  "value": "bf:Person"
                },
                {
                  "label": "bf:Organisation",
                  "value": "bf:Organisation"
                }
              ]
            },
            "queryOptions": {
              "type": "mef"
            }
          }
        }
      }
    },
    "pid": {
      "title": "MEF ID",
      "type": "string",
      "minLength": 1
    }
  }
}
