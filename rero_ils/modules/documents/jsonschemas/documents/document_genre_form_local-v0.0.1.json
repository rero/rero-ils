{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Genre, form (textual)",
  "type": "object",
  "additionalProperties": false,
  "propertiesOrder": [
    "type",
    "authorized_access_point",
    "source",
    "identifiedBy"
  ],
  "required": [
    "type",
    "authorized_access_point"
  ],
  "properties": {
    "type": {
      "title": "Type",
      "type": "string",
      "default": "bf:Topic",
      "const": "bf:Topic",
      "widget": {
        "formlyConfig": {
          "props": {
            "alwaysHidden": true
          }
        }
      }
    },
    "authorized_access_point": {
      "title": "Access Point",
      "type": "string",
      "minLength": 1,
      "widget": {
        "formlyConfig": {
          "props": {
            "itemCssClass": "ui:col-span-12 ui:ui:md:col-span-8",
            "placeholder": "Example: Electronic serials"
          }
        }
      }
    },
    "source": {
      "title": "Source",
      "description": "Source of the genre or form.",
      "type": "string",
      "minLength": 3,
      "widget": {
        "formlyConfig": {
          "props": {
            "itemCssClass": "ui:col-span-12 ui:ui:md:col-span-4"
          }
        }
      }
    },
    "identifiedBy": {
      "$ref": "https://bib.rero.ch/schemas/common/identifier-v0.0.1.json#/identifier"
    }
  },
  "widget": {
    "formlyConfig": {
      "props": {
        "containerCssClass": "ui:grid ui:ui:grid-cols-12 ui:ui:gap-x-2"
      }
    }
  }
}
