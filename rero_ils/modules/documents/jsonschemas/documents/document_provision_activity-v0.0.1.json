{
  "provisionActivity": {
    "title": "Provision activities",
    "type": "array",
    "minItems": 1,
    "default": [
      {
        "type": "bf:Publication",
        "statement": [
          {
            "type": "bf:Place"
          },
          {
            "type": "bf:Agent"
          },
          {
            "type": "Date"
          }
        ]
      }
    ],
    "items": {
      "title": "Provision activity",
      "type": "object",
      "additionalProperties": false,
      "propertiesOrder": [
        "type",
        "startDate",
        "endDate",
        "note",
        "place",
        "statement"
      ],
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "title": "Type",
          "type": "string",
          "default": "bf:Publication",
          "enum": [
            "bf:Publication",
            "bf:Manufacture",
            "bf:Distribution",
            "bf:Production"
          ],
          "form": {
            "type": "selectWithSort",
            "options": [
              {
                "label": "Publication",
                "value": "bf:Publication"
              },
              {
                "label": "Manufacture",
                "value": "bf:Manufacture"
              },
              {
                "label": "Distribution",
                "value": "bf:Distribution"
              },
              {
                "label": "Production",
                "value": "bf:Production"
              }
            ],
            "templateOptions": {
              "cssClass": "col-lg-4"
            }
          }
        },
        "place": {
          "title": "Places",
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "title": "Place",
            "required": [
              "country",
              "type"
            ],
            "propertiesOrder": [
              "type",
              "country",
              "canton"
            ],
            "properties": {
              "type": {
                "title": "Type",
                "type": "string",
                "const": "bf:Place",
                "default": "bf:Place",
                "readOnly": true,
                "form": {
                  "wrappers": [
                    "hide"
                  ]
                }
              },
              "country": {
                "$ref": "https://ils.rero.ch/schemas/common/countries-v0.0.1.json#/country"
              },
              "canton": {
                "$ref": "https://ils.rero.ch/schemas/common/cantons-v0.0.1.json#/canton"
              }
            },
            "form": {
              "templateOptions": {
                "cssClass": "row"
              }
            }
          },
          "form": {
            "hide": true,
            "templateOptions": {
              "cssClass": "col-lg-12"
            }
          }
        },
        "statement": {
          "title": "Statements",
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "title": "Statement",
            "propertiesOrder": [
              "type",
              "label"
            ],
            "required": [
              "type",
              "label"
            ],
            "properties": {
              "type": {
                "title": "Type",
                "type": "string",
                "enum": [
                  "bf:Place",
                  "bf:Agent",
                  "Date"
                ],
                "form": {
                  "type": "selectWithSort",
                  "options": [
                    {
                      "label": "Place",
                      "value": "bf:Place"
                    },
                    {
                      "label": "Agent",
                      "value": "bf:Agent"
                    },
                    {
                      "label": "Date",
                      "value": "Date"
                    }
                  ],
                  "templateOptions": {
                    "cssClass": "col-lg-4"
                  }
                }
              },
              "label": {
                "title": "Labels",
                "type": "array",
                "minItems": 1,
                "items": {
                  "title": "Label",
                  "$ref": "https://ils.rero.ch/schemas/common/languages-v0.0.1.json#/language_script"
                },
                "form": {
                  "templateOptions": {
                    "cssClass": "col-lg-8"
                  }
                }
              },
              "form": {
                "templateOptions": {
                  "cssClass": "col-lg-6"
                }
              }
            },
            "form": {
              "templateOptions": {
                "cssClass": "row"
              }
            }
          },
          "form": {
            "templateOptions": {
              "cssClass": "col-lg-12"
            }
          }
        },
        "note": {
          "title": "Note",
          "type": "string",
          "minLength": 1,
          "form": {
            "hide": true,
            "templateOptions": {
              "cssClass": "col-lg-6"
            }
          }
        },
        "startDate": {
          "title": "Date 1",
          "description": "Normalised date used for sorting and filtering options (MARC 008). A free text date (transcripted) can be added in the field \\"Statements\\".",
          "type": "integer",
          "minimum": -9999,
          "maximum": 2050,
          "form": {
            "expressionProperties": {
              "templateOptions.required": "model.type === 'bf:Publication'"
            },
            "templateOptions": {
              "cssClass": "col-lg-4"
            }
          }
        },
        "endDate": {
          "title": "Date 2",
          "description": "Normalised end date if the provision activity covers more than one year, and used for sorting and filtering options (MARC 008). A free text date (transcripted) can be added in the field \\"Statements\\".",
          "type": "integer",
          "minimum": -9999,
          "maximum": 2050,
          "form": {
            "hide": true,
            "templateOptions": {
              "cssClass": "col-lg-4"
            }
          }
        }
      },
      "form": {
        "templateOptions": {
          "cssClass": "row"
        }
      }
    },
    "form": {
      "templateOptions": {
        "cssClass": "editor-title"
      }
    }
  }
}
