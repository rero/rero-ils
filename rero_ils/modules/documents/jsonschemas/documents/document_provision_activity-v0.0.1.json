{
  "provisionActivity": {
    "title": "Provision activities",
    "type": "array",
    "minItems": 1,
    "default": [
      {
        "type": "bf:Publication"
      }
    ],
    "items": {
      "title": "Provision activity",
      "type": "object",
      "additionalProperties": false,
      "propertiesOrder": [
        "type",
        "startDate",
        "endDate",
        "original_date",
        "note",
        "place",
        "statement"
      ],
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "title": "Type",
          "type": "string",
          "default": "bf:Publication",
          "enum": [
            "bf:Publication",
            "bf:Manufacture",
            "bf:Distribution",
            "bf:Production"
          ],
          "form": {
            "type": "selectWithSort",
            "options": [
              {
                "label": "bf:Publication",
                "value": "bf:Publication"
              },
              {
                "label": "bf:Manufacture",
                "value": "bf:Manufacture"
              },
              {
                "label": "bf:Distribution",
                "value": "bf:Distribution"
              },
              {
                "label": "bf:Production",
                "value": "bf:Production"
              }
            ],
            "templateOptions": {
              "itemcCssClass": "col"
            }
          }
        },
        "place": {
          "title": "Places",
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "title": "Place",
            "required": [
              "country"
            ],
            "propertiesOrder": [
              "country",
              "canton",
              "identifiedBy"
            ],
            "properties": {
              "country": {
                "allOf": [
                  {
                    "form": {
                      "templateOptions": {
                        "itemCssClass": "col-lg-12"
                      }
                    }
                  },
                  {
                    "$ref": "https://bib.rero.ch/schemas/common/countries-v0.0.1.json#/country"
                  }
                ]
              },
              "canton": {
                "$ref": "https://bib.rero.ch/schemas/common/cantons-v0.0.1.json#/canton"
              },
              "identifiedBy": {
                "allOf": [
                  {
                    "form": {
                      "templateOptions": {
                        "itemCssClass": "col-lg-12"
                      }
                    }
                  },
                  {
                    "$ref": "https://bib.rero.ch/schemas/documents/document_identifier-v0.0.1.json#/identifier_contribution"
                  }
                ]
              }
            }
          },
          "form": {
            "templateOptions": {
              "itemCssClass": "col-lg-12"
            },
            "expressionProperties": {
              "templateOptions.required": "field?.parent?.model && field.parent.model.type === 'bf:Publication'"
            }
          }
        },
        "statement": {
          "title": "Statements",
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "title": "Statement",
            "description": "Statement of place and agent of the provision activity.",
            "propertiesOrder": [
              "type",
              "label"
            ],
            "required": [
              "type",
              "label"
            ],
            "properties": {
              "type": {
                "title": "Type",
                "type": "string",
                "enum": [
                  "bf:Place",
                  "bf:Agent",
                  "Date"
                ],
                "form": {
                  "type": "selectWithSort",
                  "options": [
                    {
                      "label": "bf:Place",
                      "value": "bf:Place"
                    },
                    {
                      "label": "bf:Agent",
                      "value": "bf:Agent"
                    },
                    {
                      "label": "Date",
                      "value": "Date"
                    }
                  ],
                  "templateOptions": {
                    "itemCssClass": "col-lg-4"
                  }
                }
              },
              "label": {
                "title": "Labels",
                "type": "array",
                "minItems": 1,
                "items": {
                  "title": "Label",
                  "$ref": "https://bib.rero.ch/schemas/common/languages-v0.0.1.json#/language_script"
                },
                "form": {
                  "templateOptions": {
                    "itemCssClass": "col-lg-8"
                  }
                }
              }
            },
            "form": {
              "templateOptions": {
                "containerCssClass": "row"
              }
            }
          },
          "form": {
            "templateOptions": {
              "itemCssClass": "col-lg-12"
            }
          }
        },
        "note": {
          "title": "Note",
          "type": "string",
          "minLength": 1,
          "form": {
            "hide": true,
            "templateOptions": {
              "itemCssClass": "col-lg-6"
            }
          }
        },
        "startDate": {
          "title": "Date 1",
          "description": "Normalised date used for sorting and filtering options (MARC 008). A free text date (transcripted) can be added in the field \"Statements\".",
          "type": "integer",
          "minimum": -9999,
          "maximum": 9999,
          "form": {
            "expressionProperties": {
              "templateOptions.required": "model.type === 'bf:Publication'"
            },
            "templateOptions": {
              "itemCssClass": "col-lg-4"
            }
          }
        },
        "endDate": {
          "title": "Date 2",
          "description": "Normalised end date if the provision activity covers more than one year, and used for sorting and filtering options (MARC 008). A free text date (transcripted) can be added in the field \"Statements\"",
          "type": "integer",
          "minimum": -9999,
          "maximum": 9999,
          "form": {
            "hide": true,
            "templateOptions": {
              "itemCssClass": "col-lg-4"
            }
          }
        },
        "original_date": {
          "title": "Date of the original",
          "description": "Date of the original in case of a reproduction.",
          "type": "integer",
          "minimum": -9999,
          "maximum": 2050,
          "form": {
            "hide": true,
            "templateOptions": {
              "itemCssClass": "col-lg-4"
            }
          }
        }
      },
      "form": {
        "templateOptions": {
          "containerCssClass": "row"
        }
      }
    }
  }
}
