{
  "work": {
    "title": "Link to work",
    "type": "object",
    "additionalProperties": false,
    "propertiesOrder": [
      "type",
      "$ref"
    ],
    "required": [
      "type",
      "$ref"
    ],
    "properties": {
      "type": {
        "title": "Type",
        "type": "string",
        "readOnly": true,
        "default": "bf:Work",
        "const": "bf:Work",
        "form": {
          "templateOptions": {
            "wrappers": [
              "hide"
            ]
          }
        }
      },
      "$ref": {
        "title": "Work",
        "type": "string",
        "pattern": "^https://mef.rero.ch/api/works/rero/.*?$",
        "form": {
          "remoteTypeahead": {
            "type": "mef-works",
            "enableGroupField": true
          },
          "templateOptions": {
            "itemCssClass": "col-lg-12"
          }
        }
      }
    },
    "form": {
      "templateOptions": {
        "containerCssClass": "row"
      }
    }
  },
