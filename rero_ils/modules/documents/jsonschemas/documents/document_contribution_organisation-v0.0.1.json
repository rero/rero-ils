{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Corporate body",
  "type": "object",
  "additionalProperties": false,
  "propertiesOrder": [
    "preferred_name",
    "type",
    "subordinate_unit",
    "place",
    "numbering",
    "conference_date",
    "conference",
    "identifiedBy"
  ],
  "required": [
    "type",
    "preferred_name",
    "conference"
  ],
  "properties": {
    "type": {
      "title": "Type",
      "type": "string",
      "readOnly": true,
      "default": "bf:Organisation",
      "const": "bf:Organisation",
      "widget": {
        "formlyConfig": {
          "wrappers": [
            "hide"
          ]
        }
      }
    },
    "preferred_name": {
      "title": "Name",
      "type": "string",
      "minLength": 1,
      "widget": {
        "formlyConfig": {
          "props": {
            "itemCssClass": "col-lg-6",
            "placeholder": "Example: Miller, John"
          }
        }
      }
    },
    "subordinate_unit": {
      "title": "Subordinate units",
      "type": "array",
      "minItems": 1,
      "items": {
        "title": "Subordinate unit",
        "type": "string",
        "minLength": 1,
        "widget": {
          "formlyConfig": {
            "props": {
              "placeholder": "Example: Office for Culture"
            }
          }
        }
      },
      "widget": {
        "formlyConfig": {
          "props": {
            "itemCssClass": "col-lg-12"
          }
        }
      }
    },
    "conference": {
      "title": "Conference",
      "description": "Mark as conference if the access point is directly at the conference name and not at the corporate body name",
      "type": "boolean",
      "default": false,
      "widget": {
        "formlyConfig": {
          "props": {
            "itemCssClass": "col-lg-6"
          }
        }
      }
    },
    "place": {
      "title": "Location of conference",
      "type": "string",
      "minLength": 1,
      "widget": {
        "formlyConfig": {
          "props": {
            "itemCssClass": "col-lg-6",
            "placeholder": "Example: Lausanne"
          }
        }
      }
    },
    "numbering": {
      "title": "Number of conference",
      "type": "string",
      "minLength": 1,
      "widget": {
        "formlyConfig": {
          "props": {
            "itemCssClass": "col-lg-6",
            "placeholder": "Example: 4"
          }
        }
      }
    },
    "conference_date": {
      "title": "Date of conference",
      "description": "Record only years.",
      "type": "string",
      "minLength": 1,
      "widget": {
        "formlyConfig": {
          "props": {
            "itemCssClass": "col-lg-6",
            "placeholder": "Example: 1989"
          }
        }
      }
    },
    "identifiedBy": {
      "allOf": [
        {
          "widget": {
            "formlyConfig": {
              "props": {
                "itemCssClass": "col-12"
              }
            }
          }
        },
        {
          "$ref": "https://bib.rero.ch/schemas/common/identifier-v0.0.1.json#/identifier"
        }
      ]
    }
  },
  "widget": {
    "formlyConfig": {
      "props": {
        "containerCssClass": "row"
      }
    }
  }
}
