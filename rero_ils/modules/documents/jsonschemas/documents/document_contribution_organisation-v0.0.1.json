{
  "title": "Organisation",
  "type": "object",
  "additionalProperties": false,
  "propertiesOrder": [
    "preferred_name",
    "type",
    "subordinate_unit",
    "place",
    "numbering",
    "conference_date",
    "conference"
  ],
  "required": [
    "type",
    "preferred_name"
  ],
  "properties": {
    "type": {
      "title": "Type",
      "type": "string",
      "readOnly": true,
      "default": "bf:Organisation",
      "const": "bf:Organisation",
      "form": {
        "templateOptions": {
          "wrappers": [
            "hide"
          ]
        }
      }
    },
    "preferred_name": {
      "title": "Name",
      "type": "string",
      "minLength": 1,
      "form": {
        "placeholder": "Example: M\u00fcller, Hans",
        "templateOptions": {
          "itemCssClass": "col-lg-6"
        }
      }
    },
    "subordinate_unit": {
      "title": "Subordinate units",
      "type": "array",
      "items": {
        "title": "Subordinate unit",
        "type": "string",
        "minLength": 1,
        "form": {
          "placeholder": "Example: Office for Culture"
        }
      },
      "form": {
        "templateOptions": {
          "itemCssClass": "col-lg-12"
        }
      }
    },
    "conference": {
      "title": "Conference",
      "description": "Mark as conference if the access point is directly at the conference name and not at the corporate body name",
      "type": "boolean",
      "default": false,
      "form": {
        "templateOptions": {
          "itemCssClass": "col-lg-6"
        }
      }
    },
    "place": {
      "title": "Location of conference",
      "type": "string",
      "minLength": 1,
      "form": {
        "placeholder": "Example: Lausanne",
        "templateOptions": {
          "itemCssClass": "col-lg-6"
        }
      }
    },
    "numbering": {
      "title": "Number of conference",
      "type": "string",
      "minLength": 1,
      "form": {
        "placeholder": "Example: 4",
        "templateOptions": {
          "itemCssClass": "col-lg-6"
        }
      }
    },
    "conference_date": {
      "title": "Date of conference",
      "description": "Record only years.",
      "type": "string",
      "minLength": 1,
      "form": {
        "placeholder": "Example: 1989",
        "templateOptions": {
          "itemCssClass": "col-lg-6"
        }
      }
    },
    "identifiedBy": {
      "$ref": "https://ils.rero.ch/schemas/documents/document_contribution_identifiedby-v0.0.1.json"
    }
  },
  "form": {
    "templateOptions": {
      "containerCssClass": "row"
    }
  }
}
