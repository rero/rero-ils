{
  "adminMetadata": {
    "title": "Admin metadata",
    "description": "Administrative information intended for professionals",
    "type": "object",
    "required": [
      "encodingLevel"
    ],
    "propertiesOrder": [
      "note",
      "encodingLevel",
      "source",
      "descriptionModifier",
      "descriptionConventions",
      "descriptionLanguage"
    ],
    "properties": {
      "note": {
        "title": "Notes",
        "type": "array",
        "minItems": 1,
        "items": {
          "title": "Note",
          "type": "string",
          "minLength": 1
        },
        "widget": {
          "formlyConfig": {
            "props": {
              "itemCssClass": "ui:col-span-12"
            }
          }
        }
      },
      "encodingLevel": {
        "title": "Encoding level",
        "description": "Indicator of the fullness of the bibliographic information",
        "type": "string",
        "default": "Full level",
        "enum": [
          "Full level",
          "Full level, material not examined",
          "Less-than-full level, material not examined",
          "Abbreviated level",
          "Core level",
          "Partial (preliminary) level",
          "Minimal level",
          "Prepublication level",
          "Unknown",
          "Not applicable"
        ],
        "widget": {
          "formlyConfig": {
            "type": "select",
            "props": {
              "itemCssClass": "ui:col-span-12 ui:md:col-span-8",
              "sort": true,
              "options": [
                {
                  "label": "Full level",
                  "value": "Full level"
                },
                {
                  "label": "Full level, material not examined",
                  "value": "Full level, material not examined"
                },
                {
                  "label": "Less-than-full level, material not examined",
                  "value": "Less-than-full level, material not examined"
                },
                {
                  "label": "Abbreviated level",
                  "value": "Abbreviated level"
                },
                {
                  "label": "Core level",
                  "value": "Core level"
                },
                {
                  "label": "Partial (preliminary) level",
                  "value": "Partial (preliminary) level"
                },
                {
                  "label": "Minimal level",
                  "value": "Minimal level"
                },
                {
                  "label": "Prepublication level",
                  "value": "Prepublication level"
                },
                {
                  "label": "Unknown",
                  "value": "Unknown"
                },
                {
                  "label": "Not applicable",
                  "value": "Not applicable"
                }
              ]
            }
          }
        }
      },
      "source": {
        "title": "Source",
        "description": "Original cataloging agency",
        "type": "string",
        "minLength": 1,
        "widget": {
          "formlyConfig": {
            "props": {
              "itemCssClass": "ui:col-span-12 ui:md:col-span-4"
            }
          }
        }
      },
      "descriptionModifier": {
        "title": "Description modifier",
        "description": "Agency that modified the description",
        "type": "array",
        "minItems": 1,
        "items": {
          "title": "Description modifier",
          "type": "string",
          "minLength": 1
        },
        "widget": {
          "formlyConfig": {
            "props": {
              "itemCssClass": "ui:col-span-12 ui:md:col-span-6"
            }
          }
        }
      },
      "descriptionLanguage": {
        "allOf": [
          {
            "title": "Description language",
            "description": "Language used for the metadata"
          },
          {
            "$ref": "https://bib.rero.ch/schemas/common/languages-v0.0.1.json#/language"
          },
          {
            "widget": {
              "formlyConfig": {
                "props": {
                  "itemCssClass": "ui:col-span-12 ui:md:col-span-6"
                }
              }
            }
          }
        ]
      },
      "descriptionConventions": {
        "title": "Description conventions",
        "description": "Rules used for the descriptive content of the resource description",
        "type": "array",
        "minItems": 1,
        "items": {
          "title": "Description conventions",
          "type": "string",
          "minLength": 1
        },
        "widget": {
          "formlyConfig": {
            "props": {
              "itemCssClass": "ui:col-span-12 ui:md:col-span-6"
            }
          }
        }
      }
    },
    "widget": {
      "formlyConfig": {
        "props": {
          "containerCssClass": "ui:grid ui:grid-cols-12 ui:gap-2"
        }
      }
    }
  }
}
