{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Acquisition order line",
  "description": "JSON schema for acquisition order line.",
  "additionalProperties": false,
  "propertiesOrder": [
    "acq_account",
    "document",
    "priority",
    "order_date",
    "reception_date",
    "quantity",
    "amount",
    "exchange_rate",
    "notes",
    "is_cancelled"
  ],
  "required": [
    "$schema",
    "pid",
    "acq_account",
    "acq_order",
    "document",
    "quantity",
    "amount"
  ],
  "properties": {
    "$schema": {
      "title": "Schema",
      "description": "Schema to validate acquisition order line records against.",
      "type": "string",
      "default": "https://bib.rero.ch/schemas/acq_order_lines/acq_order_line-v0.0.1.json",
      "pattern": "^https://bib.rero.ch/schemas/acq_order_lines/acq_order_line-v([0-9]+?\\.){3}json$"
    },
    "pid": {
      "title": "Acquisition order line ID",
      "type": "string",
      "minLength": 1
    },
    "priority": {
      "title": "Priority",
      "description": "The higher the number, the higher the priority.",
      "type": "integer",
      "minimum": 0,
      "maximum": 5,
      "default": 0,
      "form": {
        "hide": true,
        "navigation": {
          "essential": true
        }
      }
    },
    "quantity": {
      "title": "Quantity",
      "type": "integer",
      "default": 1,
      "minimum": 1
    },
    "quantity_received": {
      "title": "Received quantity",
      "type": "integer",
      "default": 0,
      "minimum": 0
    },
    "amount": {
      "title": "Amount",
      "type": "number",
      "default": 0,
      "minimum": 0,
      "form": {
        "fieldMap": "amount"
      }
    },
    "total_amount": {
      "title": "Total amount",
      "type": "number",
      "default": 0,
      "minimum": 0
    },
    "exchange_rate": {
      "title": "Exchange rate",
      "type": "number",
      "minimum": 0,
      "form": {
        "hide": true,
        "navigation": {
          "essential": true
        }
      }
    },
    "notes": {
      "title": "Notes",
      "type": "array",
      "minItems": 0,
      "maxItems": 2,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "title": "Note",
        "propertiesOrder": [
          "type",
          "content"
        ],
        "required": [
          "type",
          "content"
        ],
        "properties": {
          "type": {
            "type": "string",
            "title": "Type",
            "enum": [
              "staff_note",
              "vendor_note"
            ],
            "default": "staff_note",
            "form": {
              "type": "selectWithSort",
              "options": [
                {
                  "label": "vendor_note",
                  "value": "vendor_note"
                },
                {
                  "label": "staff_note",
                  "value": "staff_note"
                }
              ]
            }
          },
          "content": {
            "type": "string",
            "title": "Content",
            "maxLength": 2000,
            "minLength": 1,
            "form": {
              "type": "textarea",
              "templateOptions": {
                "rows": 3
              }
            }
          }
        }
      },
      "form": {
        "hide": true,
        "navigation": {
          "essential": true
        },
        "templateOptions": {
          "wrappers": [
            "card"
          ]
        },
        "validation": {
          "validators": {
            "uniqueValueKeysInObject": {
              "keys": [
                "type"
              ]
            }
          },
          "messages": {
            "uniqueValueKeysInObjectMessage": "Only one note per type is allowed"
          }
        }
      }
    },
    "order_date": {
      "title": "Order date",
      "type": "string",
      "format": "date",
      "pattern": "^[0-9]{4}-(0[1-9]|1[0-2])-(0[1-9]|[12][0-9]|3[01])$",
      "form": {
        "hideExpression": "field.parent.model.status !== 'ordered' && field.parent.model.status !== 'received'",
        "expressionProperties": {
          "templateOptions.required": "field.parent.model.status === 'ordered' || field.parent.model.status === 'received'"
        },
        "type": "datepicker",
        "placeholder": "Select a date",
        "validation": {
          "messages": {
            "patternMessage": "Should be in the following format: 2022-12-31 (YYYY-MM-DD)."
          }
        }
      }
    },
    "reception_date": {
      "title": "Receipt date",
      "type": "string",
      "format": "date",
      "pattern": "^[0-9]{4}-(0[1-9]|1[0-2])-(0[1-9]|[12][0-9]|3[01])$",
      "form": {
        "hideExpression": "field.parent.model.status !== 'received'",
        "expressionProperties": {
          "templateOptions.required": "field.parent.model.status === 'received'"
        },
        "type": "datepicker",
        "placeholder": "Select a date",
        "validation": {
          "messages": {
            "patternMessage": "Should be in the following format: 2022-12-31 (YYYY-MM-DD)."
          }
        }
      }
    },
    "acq_account": {
      "title": "Acquisition account",
      "type": "object",
      "required": [
        "$ref"
      ],
      "properties": {
        "$ref": {
          "title": "Acquisition account URI",
          "type": "string",
          "pattern": "^https://bib.rero.ch/api/acq_accounts/.*?$",
          "form": {
            "focus": true,
            "type": "account-select",
            "placeholder": "Select an account",
            "templateOptions": {
              "label": ""
            }
          }
        }
      }
    },
    "acq_order": {
      "title": "Acquisition order",
      "type": "object",
      "properties": {
        "$ref": {
          "title": "Acquisition order URI",
          "type": "string",
          "pattern": "^https://bib.rero.ch/api/acq_orders/.*?$"
        }
      }
    },
    "document": {
      "title": "Document",
      "type": "object",
      "required": [
        "$ref"
      ],
      "properties": {
        "$ref": {
          "title": "Document URI",
          "type": "string",
          "pattern": "^https://bib.rero.ch/api/documents/.+?$",
          "form": {
            "remoteTypeahead": {
              "type": "documents"
            },
            "validation": {
              "messages": {
                "patternMessage": "Should be in the following format: https://bib.rero.ch/api/documents/<PID>."
              }
            },
            "templateOptions": {
              "label": ""
            }
          }
        }
      }
    },
    "organisation": {
      "title": "Organisation",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "$ref"
      ],
      "properties": {
        "$ref": {
          "title": "Organisation URI",
          "type": "string",
          "pattern": "^https://bib.rero.ch/api/organisations/.*?$"
        }
      }
    },
    "library": {
      "title": "Library",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "$ref"
      ],
      "properties": {
        "$ref": {
          "title": "Library URI",
          "type": "string",
          "pattern": "^https://bib.rero.ch/api/libraries/.*?$"
        }
      }
    },
    "is_cancelled": {
      "title": "Cancelled",
      "description": "If checked this order line should be considerate as cancelled.",
      "type": "boolean",
      "default": false
    }
  }
}
