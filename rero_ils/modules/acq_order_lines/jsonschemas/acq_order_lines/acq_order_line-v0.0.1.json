{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Acquisition order line",
  "description": "JSON schema for acquisition order line.",
  "additionalProperties": false,
  "propertiesOrder": [
    "acq_account",
    "document",
    "order_line_status",
    "quantity",
    "amount",
    "discount_amount",
    "exchange_rate",
    "note"
  ],
  "required": [
    "$schema",
    "pid",
    "acq_account",
    "acq_order",
    "document",
    "amount"
  ],
  "properties": {
    "$schema": {
      "title": "Schema",
      "description": "Schema to validate acquisition order line records against.",
      "type": "string",
      "default": "https://ils.rero.ch/schemas/acq_order_lines/acq_order_line-v0.0.1.json",
      "pattern": "^https://ils.rero.ch/schemas/acq_order_lines/acq_order_line-v([0-9]+?\\.){3}json$"
    },
    "pid": {
      "title": "Acquisition order line ID",
      "type": "string",
      "minLength": 1
    },
    "order_line_status": {
      "title": "Order line status",
      "type": "string",
      "enum": [
        "approved",
        "canceled",
        "ordered",
        "requested",
        "pending",
        "received"
      ],
      "default": "pending",
      "form": {
        "type": "selectWithSort",
        "wrappers": [
          "form-field"
        ],
        "options": [
          {
            "value": "approved",
            "label": "Approved"
          },
          {
            "value": "canceled",
            "label": "Canceled"
          },
          {
            "value": "ordered",
            "label": "Ordered"
          },
          {
            "value": "requested",
            "label": "Requested"
          },
          {
            "value": "pending",
            "label": "Pending"
          },
          {
            "value": "received",
            "label": "Received"
          }
        ],
        "templateOptions": {
          "selectWithSortOptions": {
            "order": "label"
          }
        }
      }
    },
    "quantity": {
      "title": "Quantity",
      "type": "integer",
      "default": 1,
      "minimum": 1
    },
    "amount": {
      "title": "Amount",
      "type": "number",
      "default": 0,
      "minimum": 0
    },
    "discount_amount": {
      "title": "Discount amount",
      "type": "number",
      "default": 0,
      "minimum": 0
    },
    "total_amount": {
      "title": "Total amount",
      "type": "number",
      "default": 0,
      "minimum": 0
    },
    "exchange_rate": {
      "title": "Exchange rate",
      "type": "number",
      "minimum": 0
    },
    "note": {
      "title": "Note",
      "type": "string",
      "minLength": 9
    },
    "acq_account": {
      "title": "Acquisition account",
      "type": "object",
      "required": [
        "$ref"
      ],
      "properties": {
        "$ref": {
          "title": "Acquisition account URI",
          "type": "string",
          "pattern": "^https://ils.rero.ch/api/acq_accounts/.*?$",
          "form": {
            "focus": true,
            "fieldMap": "acq_account",
            "placeholder": "Select an account",
            "templateOptions": {
              "label": ""
            }
          }
        }
      }
    },
    "acq_order": {
      "title": "Acquisition order",
      "type": "object",
      "properties": {
        "$ref": {
          "title": "Acquisition order URI",
          "type": "string",
          "pattern": "^https://ils.rero.ch/api/acq_orders/.*?$"
        }
      }
    },
    "document": {
      "title": "Document",
      "type": "object",
      "required": [
        "$ref"
      ],
      "properties": {
        "$ref": {
          "title": "Document URI",
          "type": "string",
          "pattern": "^https://ils.rero.ch/api/documents/.+?$",
          "form": {
            "remoteTypeahead": {
              "type": "documents"
            },
            "validation": {
              "messages": {
                "patternMessage": "Should be in the following format: https://ils.rero.ch/api/documents/<PID>."
              }
            }
          }
        }
      }
    },
    "organisation": {
      "title": "Organisation",
      "type": "object",
      "properties": {
        "$ref": {
          "title": "Organisation URI",
          "type": "string",
          "pattern": "^https://ils.rero.ch/api/organisations/.*?$"
        }
      }
    }
  }
}
