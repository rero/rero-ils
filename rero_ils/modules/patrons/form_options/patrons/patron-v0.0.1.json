        "type": "section",
        "htmlClass": "row",
        "items": [
          {
            "type": "section",
            "htmlClass": "col-xs-6",
            "items": [
              "email"
            ]
          },
          {
            "type": "section",
            "htmlClass": "col-xs-6",
            "items": [
              "phone"
            ]
          }
        ]
      }
    ]
  },
  {
    "type": "fieldset",
    "title": "Patron information",
    "items": [
      {
        "key": "is_patron",
        "description": "",
        "type": "checkbox"
      },
      {
        "key": "barcode",
        "condition": "model.is_patron == true",
        "htmlClass": "col-xs-6",
        "validationMessage": {
          "alreadyTakenMessage": "The barcode is already taken",
          "cannotBeVerifiedMessage": "The server cannot verify the barcode"
        }
      },
      {
        "key": "patron_type_pid",
        "condition": "model.is_patron == true",
        "htmlClass": "col-xs-6",
        "populate": "patron_names_descriptions",
        "type": "select"
      }
    ]
  },
  {
    "type": "fieldset",
    "title": "Staff information",
    "items": [
      {
        "key": "is_staff",
        "description": "",
        "type": "checkbox"
      },
      {
        "key": "library_pid",
        "htmlClass": "col-xs-6",
        "condition": "model.is_staff == true",
        "populate": "locations_pids_names",
        "type": "select"
      }
    ]
  },
  {
    "type": "fieldset",
    "items": [
      {
        "type": "actions",
        "htmlClass": "rero21-submit pull-right",
