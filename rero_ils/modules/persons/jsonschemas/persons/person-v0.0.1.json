{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Mef person",
  "description": "JSON schema for a mef person",
  "additionalProperties": false,
  "required": [
    "$schema",
    "pid",
    "viaf_pid",
    "sources"
  ],
  "properties": {
    "$schema": {
      "title": "Schema",
      "description": "Schema to validate organisation records against.",
      "type": "string",
      "minLength": 9
    },
    "pid": {
      "title": "Library ID",
      "type": "string"
    },
    "id": {
      "title": "Library ID",
      "type": "string"
    },
    "viaf_pid": {
      "title": "VIAF ID",
      "type": "string"
    },
    "sources": {
      "title": "Source authorities list",
      "type": "array",
      "uniqueItems": true,
      "minItems": 1,
      "maxItems": 3,
      "items": {
        "type": "string",
        "enum": [
          "rero",
          "gnd",
          "bnf"
        ],
        "form": {
          "options": [
            {
              "label": "rero",
              "value": "rero"
            },
            {
              "label": "gnd",
              "value": "gnd"
            },
            {
              "label": "bnf",
              "value": "bnf"
            }
          ]
        }
      }
    },
    "rero": {
      "title": "RERO authorities",
      "type": "object"
    },
    "gnd": {
      "title": "GND authorities",
      "type": "object"
    },
    "bnf": {
      "title": "BNF authorities",
      "type": "object"
    }
  }
}
