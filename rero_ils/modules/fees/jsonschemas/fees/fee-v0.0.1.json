{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Fee",
  "description": "JSON schema for fee.",
  "additionalProperties": false,
  "required": [
    "$schema",
    "pid",
    "creation_date",
    "fee_type",
    "location",
    "amount",
    "currency",
    "status"
  ],
  "properties": {
    "$schema": {
      "title": "Schema",
      "description": "Schema to validate fee records against.",
      "type": "string",
      "minLength": 9
    },
    "pid": {
      "title": "Fee ID",
      "type": "string",
      "minLength": 1
    },
    "creation_date": {
      "type": "string",
      "format": "date-time",
      "title": "Fee creation date"
    },
    "fee_type": {
      "type": "string",
      "title": "Fee type",
      "enum": [
        "overdue"
      ]
    },
    "notification": {
      "title": "Notification",
      "type": "object",
      "properties": {
        "$ref": {
          "title": "Notification URI",
          "type": "string",
          "pattern": "^https://ils.rero.ch/api/notifications/.*?$"
        }
      }
    },
    "location": {
      "title": "Location",
      "type": "object",
      "properties": {
        "$ref": {
          "title": "Location URI",
          "type": "string",
          "pattern": "^https://ils.rero.ch/api/locations/.*?$"
        }
      }
    },
    "amount": {
      "type": "number",
      "title": "Fee amount"
    },
    "currency": {
      "type": "string",
      "title": "Fee currency",
      "enum": [
        "CHF",
        "EUR",
        "USD"
      ]
    },
    "status": {
      "type": "string",
      "title": "Fee status",
      "enum": [
        "open",
        "paid"
      ]
    }
  }
}
