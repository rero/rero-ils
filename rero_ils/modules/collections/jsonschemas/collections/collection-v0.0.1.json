{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Collection",
  "additionalProperties": false,
  "required": [
    "$schema",
    "pid",
    "collection_id",
    "title",
    "collection_type",
    "start_date",
    "end_date",
    "organisation",
    "published"
  ],
  "propertiesOrder": [
    "collection_type",
    "start_date",
    "end_date",
    "title",
    "collection_id",
    "teachers",
    "description",
    "subjects",
    "teachers",
    "libraries",
    "items",
    "published"
  ],
  "properties": {
    "$schema": {
      "title": "Schema",
      "description": "Schema to validate collection records against.",
      "type": "string",
      "minLength": 9,
      "default": "https://ils.rero.ch/schema/collections/collection-v0.0.1.json"
    },
    "pid": {
      "title": "Internal collection PID",
      "type": "string",
      "minLength": 1
    },
    "collection_id": {
      "title": "Identifier",
      "description": "Identifier or code used locally for this collection",
      "type": "string",
      "minLength": 1
    },
    "title": {
      "title": "Title",
      "type": "string",
      "minLength": 1
    },
    "collection_type": {
      "title": "Type",
      "type": "string",
      "enum": [
        "course",
        "exhibition"
      ],
      "form": {
        "type": "selectWithSort",
        "options": [
          {
            "label": "course",
            "value": "course"
          },
          {
            "label": "exhibition",
            "value": "exhibition"
          }
        ],
        "templateOptions": {
          "wrappers": [
            "form-field"
          ],
          "selectWithSortOptions": {
            "order": "label"
          }
        }
      }
    },
    "teachers": {
      "title": "Teachers",
      "type": "array",
      "minItems": 1,
      "items": {
        "title": "Teacher",
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name"
        ],
        "propertiesOrder": [
          "name"
        ],
        "properties": {
          "name": {
            "title": "Name",
            "type": "string"
          }
        }
      },
      "form": {
        "templateOptions": {
          "wrappers": [
            "card"
          ]
        },
        "hideExpression": "field.parent.model.collection_type !== 'course'",
        "expressionProperties": {
          "templateOptions.required": "true"
        }
      }
    },
    "subjects": {
      "title": "Subjects",
      "type": "array",
      "minLength": 1,
      "items": {
        "title": "Subject",
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "title": "Name",
            "type": "string"
          }
        }
      },
      "form": {
        "templateOptions": {
          "wrappers": [
            "card"
          ]
        }
      }
    },
    "description": {
      "title": "Description",
      "type": "string",
      "minLength": 1,
      "form": {
        "type": "textarea",
        "templateOptions": {
          "rows": 5
        }
      }
    },
    "start_date": {
      "type": "string",
      "format": "date",
      "title": "Start date",
      "pattern": "^[0-9]{4}-(0[1-9]|1[0-2])-(0[1-9]|[12][0-9]|3[01])$",
      "form": {
        "type": "datepicker",
        "validation": {
          "messages": {
            "patternMessage": "Should be in the following format: 2022-12-31 (YYYY-MM-DD).",
            "dateMustBeLessThan": "The start date must be less than the end date."
          },
          "validators": {
            "dateMustBeLessThan": {
              "startDate": "start_date",
              "endDate": "end_date",
              "strict": true
            }
          }
        }
      }
    },
    "end_date": {
      "type": "string",
      "format": "date",
      "title": "End date",
      "pattern": "^[0-9]{4}-(0[1-9]|1[0-2])-(0[1-9]|[12][0-9]|3[01])$",
      "form": {
        "type": "datepicker",
        "validation": {
          "messages": {
            "patternMessage": "Should be in the following format: 2022-12-31 (YYYY-MM-DD).",
            "datesMustBeGreaterThan": "The end date must be greater than the start date."
          },
          "validators": {
            "dateMustBeGreaterThan": {
              "startDate": "start_date",
              "endDate": "end_date",
              "strict": true
            }
          }
        }
      }
    },
    "libraries": {
      "title": "Libraries",
      "type": "array",
      "minItems": 1,
      "items": {
        "title": "Library",
        "type": "object",
        "additionalProperties": false,
        "required": [
          "$ref"
        ],
        "properties": {
          "$ref": {
            "title": "Name",
            "type": "string",
            "pattern": "^https://ils.rero.ch/api/libraries/.*?$",
            "form": {
              "fieldMap": "library"
            }
          }
        }
      },
      "form": {
        "templateOptions": {
          "wrappers": [
            "card"
          ]
        }
      }
    },
    "items": {
      "title": "Items",
      "type": "array",
      "items": {
        "title": "Item",
        "type": "object",
        "additionalProperties": false,
        "required": [
          "$ref"
        ],
        "properties": {
          "$ref": {
            "title": "Item",
            "type": "string",
            "pattern": "^https://ils.rero.ch/api/items/.*?$",
            "form": {
              "remoteTypeahead": {
                "type": "items"
              }
            }
          }
        }
      },
      "form": {
        "templateOptions": {
          "wrappers": [
            "card"
          ]
        }
      }
    },
    "organisation": {
      "title": "Organisation",
      "type": "object",
      "properties": {
        "$ref": {
          "title": "Organisation URI",
          "type": "string",
          "pattern": "^https://ils.rero.ch/api/organisations/.*?$"
        }
      }
    },
    "published": {
      "type": "boolean",
      "title": "Published",
      "description": "\"Published\" indicates that the collection appears in the public interface.",
      "default": true
    }
  }
}
