          },
          "email": {
            "type": "keyword",
            "fields": {
              "analyzed": {
                "type": "text",
                "analyzer": "custom_keyword"
              }
            }
          },
          "phone": {
            "type": "keyword"
          },
          "postal_code": {
            "type": "keyword"
          },
          "street": {
            "type": "text"
          }
