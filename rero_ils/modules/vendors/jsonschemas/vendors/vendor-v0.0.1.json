{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Vendor",
  "description": "JSON schema for a vendor",
  "additionalProperties": false,
  "propertiesOrder": [
    "name",
    "website",
    "communication_language",
    "note",
    "currency",
    "vat_rate",
    "default_contact",
    "order_contact"
  ],
  "required": [
    "$schema",
    "pid",
    "name",
    "currency",
    "vat_rate",
    "organisation"
  ],
  "properties": {
    "$schema": {
      "title": "Schema",
      "description": "Schema to validate vendor records against.",
      "type": "string",
      "minLength": 9,
      "default": "https://ils.rero.ch/schemas/vendors/vendor-v0.0.1.json"
    },
    "pid": {
      "title": "Vendor ID",
      "type": "string"
    },
    "name": {
      "title": "Name",
      "type": "string",
      "minLength": 1,
      "form": {
        "focus": true,
        "validation": {
          "validators": {
            "valueAlreadyExists": {
              "term": "vendor_name"
            }
          },
          "messages": {
            "alreadyTakenMessage": "The vendor name is already taken."
          }
        }
      }
    },
    "website": {
      "title": "Website",
      "type": "string",
      "format": "uri",
      "pattern": "^(ftps?|https?)://.*$",
      "minLength": 4,
      "form": {
        "validation": {
          "messages": {
            "patternMessage": "Should be a valid URL format."
          }
        }
      }
    },
    "note": {
      "title": "Note",
      "type": "string",
      "minLength": 1
    },
    "communication_language": {
      "title": "Communication language",
      "type": "string",
      "enum": [
        "fre",
        "eng",
        "ita",
        "ger",
        "spa"
      ],
      "form": {
        "type": "selectWithSort",
        "options": [
          {
            "value": "fre",
            "label": "lang_fre"
          },
          {
            "value": "eng",
            "label": "lang_eng"
          },
          {
            "value": "ita",
            "label": "lang_ita"
          },
          {
            "value": "ger",
            "label": "lang_ger"
          },
          {
            "value": "spa",
            "label": "lang_spa"
          }
        ]
      }
    },
    "default_contact": {
      "title": "Default contact details",
      "type": "object",
      "propertiesOrder": [
        "contact_person",
        "street",
        "postal_code",
        "city",
        "country",
        "phone",
        "email"
      ],
      "required": [
        "city"
      ],
      "properties": {
        "contact_person": {
          "title": "Contact person",
          "description": "Vendor contact person.",
          "type": "string",
          "minLength": 4
        },
        "street": {
          "title": "Street",
          "description": "Street and number of the address, separated by a coma.",
          "type": "string",
          "minLength": 4
        },
        "postal_code": {
          "title": "Postal code",
          "type": "string",
          "minLength": 4
        },
        "city": {
          "title": "City",
          "type": "string",
          "minLength": 2
        },
        "country": {
          "title": "Country",
          "type": "string",
          "minLength": 2
        },
        "phone": {
          "title": "Phone number",
          "description": "Phone number with the international prefix, without spaces.",
          "type": "string"
        },
        "email": {
          "title": "Email",
          "type": "string",
          "format": "email",
          "pattern": "^.*@.*\\..+$",
          "minLength": 6,
          "form": {
            "validation": {
              "messages": {
                "patternMessage": "The email is not valid."
              }
            }
          }
        }
      }
    },
    "order_contact": {
      "title": "Order contact details",
      "type": "object",
      "propertiesOrder": [
        "contact_person",
        "street",
        "postal_code",
        "city",
        "country",
        "phone",
        "email"
      ],
      "properties": {
        "contact_person": {
          "title": "Contact name",
          "description": "Name of the vendor contact person.",
          "type": "string",
          "minLength": 4
        },
        "street": {
          "title": "Street",
          "description": "Street and number of the address, separated by a coma.",
          "type": "string",
          "minLength": 4
        },
        "postal_code": {
          "title": "Postal code",
          "type": "string",
          "minLength": 4
        },
        "city": {
          "title": "City",
          "type": "string",
          "minLength": 2
        },
        "country": {
          "title": "Country",
          "type": "string",
          "minLength": 2
        },
        "phone": {
          "title": "Phone number",
          "description": "Phone number with the international prefix, without spaces.",
          "type": "string",
          "pattern": "^\\+[0-9]*$"
        },
        "email": {
          "title": "Email",
          "type": "string",
          "format": "email",
          "pattern": "^.*@.*\\..+$",
          "minLength": 6,
          "form": {
            "validation": {
              "messages": {
                "patternMessage": "The email is not valid."
              }
            }
          }
        }
      }
    },
    "currency": {
      "title": "Currency",
      "type": "string",
      "enum": [
        "CHF",
        "CAD",
        "EUR",
        "GBP",
        "USD",
        "AUD"
      ],
      "default": "CHF",
      "pattern": "^[A-Z]{3}$",
      "form": {
        "type": "selectWithSort"
      }
    },
    "vat_rate": {
      "title": "VAT rate",
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "organisation": {
      "title": "Organisation",
      "type": "object",
      "required": [
        "$ref"
      ],
      "properties": {
        "$ref": {
          "title": "Organisation URI",
          "type": "string",
          "pattern": "^https://ils.rero.ch/api/organisations/.*?$"
        }
      }
    }
  }
}
