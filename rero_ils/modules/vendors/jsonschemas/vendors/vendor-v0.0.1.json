{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Vendor",
  "description": "JSON schema for a vendor",
  "additionalProperties": false,
  "propertiesOrder": [
    "name",
    "website",
    "communication_language",
    "note",
    "default_contact",
    "order_contact"
  ],
  "required": [
    "$schema",
    "pid",
    "name",
    "organisation"
  ],
  "properties": {
    "$schema": {
      "title": "Schema",
      "description": "Schema to validate vendor records against.",
      "type": "string",
      "minLength": 9,
      "default": "https://ils.rero.ch/schema/vendors/vendor-v0.0.1.json"
    },
    "pid": {
      "title": "Vendor ID",
      "type": "string"
    },
    "name": {
      "title": "Name",
      "description": "",
      "type": "string",
      "minLength": 1,
      "form": {
        "focus": true,
        "validation": {
          "validators": {
            "valueAlreadyExists": {
              "term": "vendor_name"
            }
          },
          "messages": {
            "alreadyTakenMessage": "The vendor name is already taken"
          }
        }
      }
    },
    "website": {
      "title": "Website",
      "description": "",
      "type": "string",
      "minLength": 4
    },
    "note": {
      "title": "Note",
      "description": "",
      "type": "string",
      "minLength": 1
    },
    "communication_language": {
      "title": "Communication language",
      "type": "string",
      "enum": [
        "fre",
        "eng",
        "ita",
        "ger"
      ],
      "form": {
        "options": [
          {
            "value": "fre",
            "label": "French"
          },
          {
            "value": "eng",
            "label": "English"
          },
          {
            "value": "ita",
            "label": "Italian"
          },
          {
            "value": "ger",
            "label": "German"
          }
        ]
      }
    },
    "default_contact": {
      "title": "Default contact details",
      "description": "",
      "type": "object",
      "propertiesOrder": [
        "contact_person",
        "street",
        "postal_code",
        "city",
        "country",
        "phone",
        "email"
      ],
      "required": [
        "city"
      ],
      "properties": {
        "contact_person": {
          "title": "Contact person",
          "description": "Contact person of the address.",
          "type": "string",
          "minLength": 4
        },
        "street": {
          "title": "Street",
          "description": "Street and number of the address, separated by a coma.",
          "type": "string",
          "minLength": 4
        },
        "postal_code": {
          "title": "Postal code",
          "type": "string",
          "minLength": 4
        },
        "city": {
          "title": "City",
          "type": "string",
          "minLength": 2
        },
        "country": {
          "title": "Country",
          "type": "string",
          "minLength": 2
        },
        "phone": {
          "title": "Phone number",
          "description": "Phone number with the international prefix, without spaces.",
          "type": "string",
          "pattern": "^\\+[0-9]*$"
        },
        "email": {
          "title": "Email",
          "type": "string",
          "format": "email",
          "pattern": "^.*@.*\\..*$",
          "minLength": 6,
          "form": {
            "validation": {
              "messages": {
                "pattern": "Email should have at least one <code>@</code> and one <code>.</code>"
              }
            }
          }
        }
      }
    },
    "order_contact": {
      "title": "Order contact details",
      "description": "",
      "type": "object",
      "propertiesOrder": [
        "contact_person",
        "street",
        "postal_code",
        "city",
        "country",
        "phone",
        "email"
      ],
      "properties": {
        "contact_person": {
          "title": "Contact name",
          "description": "Contact person of the address.",
          "type": "string",
          "minLength": 4
        },
        "street": {
          "title": "Street",
          "description": "Street and number of the address, separated by a coma.",
          "type": "string",
          "minLength": 4
        },
        "postal_code": {
          "title": "Postal code",
          "type": "string",
          "minLength": 4,
          "validationMessage": "A valid postal code with a min of 4 characters."
        },
        "city": {
          "title": "City",
          "type": "string",
          "minLength": 2
        },
        "country": {
          "title": "Country",
          "type": "string",
          "minLength": 2
        },
        "phone": {
          "title": "Phone number",
          "description": "Phone number with the international prefix, without spaces.",
          "type": "string",
          "pattern": "^\\+[0-9]*$"
        },
        "email": {
          "title": "Email",
          "type": "string",
          "format": "email",
          "pattern": "^.*@.*\\..*$",
          "minLength": 6,
          "form": {
            "validation": {
              "messages": {
                "pattern": "Email should have at least one <code>@</code> and one <code>.</code>"
              }
            }
          }
        }
      }
    },
    "organisation": {
      "title": "Organisation",
      "type": "object",
      "required": [
        "$ref"
      ],
      "properties": {
        "$ref": {
          "title": "Organisation URI",
          "type": "string",
          "pattern": "^https://ils.rero.ch/api/organisations/.*?$"
        }
      }
    }
  }
}