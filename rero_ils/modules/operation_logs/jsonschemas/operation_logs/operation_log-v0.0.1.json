{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Operation log",
  "description": "Operation log keeps the operation history of a resource.",
  "additionalProperties": false,
  "required": [
    "$schema",
    "pid",
    "record",
    "operation"
  ],
  "propertiesOrder": [
    "pid",
    "record",
    "operation"
  ],
  "properties": {
    "$schema": {
      "title": "Schema",
      "description": "Schema to validate operation_log records against.",
      "type": "string",
      "minLength": 9,
      "default": "https://ils.rero.ch/schema/operation_logs/operation_log-v0.0.1.json"
    },
    "pid": {
      "title": "Operation log PID",
      "type": "string",
      "minLength": 1
    },
    "record": {
      "title": "Record",
      "type": "object",
      "properties": {
        "$ref": {
          "title": "record",
          "type": "string",
          "pattern": "^https://ils.rero.ch/api/.*/.*?$"
        }
      }
    },
    "user": {
      "title": "User",
      "type": "object",
      "properties": {
        "$ref": {
          "title": "User URI",
          "type": "string",
          "pattern": "^https://ils.rero.ch/api/patrons/.+?$"
        }
      }
    },
    "user_name": {
      "title": "User name",
      "type": "string",
      "minLength": 2
    },
    "date": {
      "title": "Operation date",
      "type": "string",
      "format": "date-time"
    },
    "operation": {
      "title": "Operation type",
      "type": "string",
      "enum": [
        "create",
        "update"
      ]
    },
    "organisation": {
      "title": "User organisation",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "$ref"
      ],
      "properties": {
        "$ref": {
          "title": "Organisation URI",
          "type": "string",
          "pattern": "^https://ils.rero.ch/api/organisations/.+?$"
        }
      }
    }
  }
}
