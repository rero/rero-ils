{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Operation log",
  "description": "Operation log keeps the operation history of a resource.",
  "additionalProperties": false,
  "required": [
    "$schema",
    "pid",
    "record",
    "operation"
  ],
  "propertiesOrder": [
    "pid",
    "record",
    "operation"
  ],
  "properties": {
    "$schema": {
      "title": "Schema",
      "description": "Schema to validate operation_log records against.",
      "type": "string",
      "minLength": 9,
      "default": "https://bib.rero.ch/schema/operation_logs/operation_log-v0.0.1.json"
    },
    "pid": {
      "title": "Operation log PID",
      "type": "string",
      "minLength": 1
    },
    "record": {
      "title": "Record",
      "type": "object",
      "properties": {
        "$ref": {
          "title": "record",
          "type": "string",
          "pattern": "^https://bib.rero.ch/api/.*/.*?$"
        }
      }
    },
    "user": {
      "title": "User",
      "type": "object",
      "properties": {
        "$ref": {
          "title": "User URI",
          "type": "string",
          "pattern": "^https://bib.rero.ch/api/patrons/.+?$"
        }
      }
    },
    "user_name": {
      "title": "User name",
      "type": "string",
      "minLength": 2
    },
    "date": {
      "title": "Operation date",
      "type": "string",
      "format": "date-time"
    },
    "operation": {
      "title": "Operation type",
      "type": "string",
      "enum": [
        "create",
        "update"
      ]
    },
    "organisation": {
      "title": "User organisation",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "$ref"
      ],
      "properties": {
        "$ref": {
          "title": "Organisation URI",
          "type": "string",
          "pattern": "^https://bib.rero.ch/api/organisations/.+?$"
        }
      }
    },
    "loan": {
      "title": "Loan",
      "description": "Loan specific data",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "override_flag": {
          "title": "Override flag",
          "description": "Allow a transaction which is normally not possible.",
          "type": "boolean",
          "default": false
        },
        "transaction_channel": {
          "title": "Transaction channel",
          "type": "string",
          "enum": [
            "ui",
            "system",
            "sip2"
          ]
        },
        "transaction_user_name": {
          "title": "Transaction user name",
          "type": "string",
          "minLength": 1
        },
        "transaction_location_name": {
          "title": "Transaction location name",
          "type": "string",
          "minLength": 1
        },
        "pickup_location_name": {
          "title": "Pickup location name",
          "type": "string",
          "minLength": 1
        },
        "patron": {
          "title": "Patron",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "name": {
              "title": "Name",
              "type": "string",
              "minLength": 1
            },
            "type": {
              "title": "Type",
              "type": "string",
              "minLength": 1
            },
            "birth_date": {
              "title": "Birthdate",
              "type": "string",
              "minLength": 1,
              "format": "yyyy-MM-dd"
            },
            "postal_code": {
              "title": "Postal code",
              "type": "string",
              "minLength": 1
            },
            "gender": {
              "title": "Gender",
              "type": "string",
              "enum": [
                "male",
                "female",
                "other"
              ]
            }
          },
          "required": [
            "name",
            "type",
            "birth_date",
            "postal_code",
            "gender"
          ]
        },
        "item": {
          "title": "Item",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "category": {
              "title": "Category",
              "type": "string",
              "minLength": 1
            },
            "call_number": {
              "title": "Call number",
              "type": "string",
              "minLength": 1
            },
            "holding": {
              "title": "Holding",
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "pid": {
                  "title": "PID",
                  "type": "string",
                  "minLength": 1
                },
                "location_name": {
                  "title": "Location name",
                  "type": "string",
                  "minLength": 1
                }
              },
              "required": [
                "pid",
                "location_name"
              ]
            },
            "document": {
              "title": "Document",
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "type": {
                  "title": "Type",
                  "type": "string",
                  "minLength": 1
                },
                "title": {
                  "title": "Title",
                  "type": "string",
                  "minLength": 1
                }
              },
              "required": [
                "type",
                "title"
              ]
            }
          },
          "required": [
            "holding",
            "document"
          ]
        }
      },
      "required": [
        "override_flag",
        "transaction_channel",
        "transaction_location_name",
        "pickup_location_name",
        "patron",
        "item"
      ]
    },
    "_created": {
      "title": "Creation date",
      "type": "string",
      "format": "date-time"
    },
    "_updated": {
      "title": "Modification date",
      "type": "string",
      "format": "date-time"
    }
  }
}
