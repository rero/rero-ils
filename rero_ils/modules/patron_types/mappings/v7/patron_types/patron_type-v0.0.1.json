{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 1,
    "max_result_window": 20000
  },
  "mappings": {
    "date_detection": false,
    "numeric_detection": false,
    "properties": {
      "$schema": {
        "type": "keyword"
      },
      "pid": {
        "type": "keyword"
      },
      "name": {
        "type": "text",
        "copy_to": "patron_type_name"
      },
      "patron_type_name": {
        "type": "keyword"
      },
      "description": {
        "type": "text"
      },
      "organisation": {
        "properties": {
          "pid": {
            "type": "keyword"
          }
        }
      },
      "subscription_amount": {
        "type": "float"
      },
      "limits": {
        "properties": {
          "fee_amount_limits": {
            "properties": {
              "default_value": {
                "type": "float"
              }
            }
          },
          "overdue_items_limits": {
            "properties": {
              "default_value": {
                "type": "integer"
              }
            }
          },
          "checkout_limits": {
            "properties": {
              "global_limit": {
                "type": "integer"
              },
              "library_limit": {
                "type": "integer"
              },
              "library_exceptions": {
                "properties": {
                  "library": {
                    "properties": {
                      "pid": {
                        "type": "keyword"
                      }
                    }
                  },
                  "value": {
                    "type": "integer"
                  }
                }
              }
            }
          }
        }
      },
      "_created": {
        "type": "date"
      },
      "_updated": {
        "type": "date"
      }
    }
  }
}
