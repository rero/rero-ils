{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Container linking one or more files to a document and a library.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "title": "Schema",
      "type": "string",
      "minLength": 9
    },
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "library",
        "document"
      ],
      "properties": {
        "collections": {
          "title": "Collections",
          "type": "array",
          "minItems": 1,
          "items": {
            "title": "Collection Name",
            "type": "string",
            "minLength": 1
          }
        },
        "document": {
          "title": "Parent document",
          "type": "object",
          "properties": {
            "$ref": {
              "title": "Parent document URI",
              "type": "string",
              "pattern": "^https://bib.rero.ch/api/documents/.*?$"
            }
          }
        },
        "library": {
          "title": "Library",
          "type": "object",
          "properties": {
            "$ref": {
              "title": "Library URI",
              "type": "string",
              "pattern": "^https://bib.rero.ch/api/libraries/.*?$"
            }
          }
        }
      }
    },
    "id": {
      "$ref": "local://definitions-v1.0.0.json#/identifier"
    },
    "pid": {
      "$ref": "local://definitions-v2.0.0.json#/internal-pid"
    },
    "files": {
      "$ref": "local://definitions-v2.0.0.json#/files"
    }
  }
}
