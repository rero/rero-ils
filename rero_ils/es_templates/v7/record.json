{
  "index_patterns": "*",
  "settings": {
    "number_of_shards": "8",
    "number_of_replicas": "1",
    "max_result_window": "100000",
    "analysis": {
      "filter": {
        "edge_ngram_filter": {
          "type": "edge_ngram",
          "min_gram": 3,
          "max_gram": 10
        },
        "french_elision": {
          "type": "elision",
          "articles_case": true,
          "articles": [
            "l",
            "m",
            "t",
            "qu",
            "n",
            "s",
            "j",
            "d",
            "c",
            "jusqu",
            "quoiqu",
            "lorsqu",
            "puisqu"
          ]
        },
        "italian_elision": {
          "type": "elision",
          "articles": [
              "c", "l", "all", "dall", "dell",
              "nell", "sull", "coll", "pell",
              "gl", "agl", "dagl", "degl", "negl",
              "sugl", "un", "m", "t", "s", "v", "d"
          ],
          "articles_case": true
        },
        "english_stop": {
          "type":       "stop",
          "stopwords":  "_english_"
        },
        "french_stop": {
          "type":       "stop",
          "stopwords":  "_french_"
        },
        "german_stop": {
          "type":       "stop",
          "stopwords":  "_german_"
        },
        "italian_stop": {
          "type":       "stop",
          "stopwords":  "_italian_"
        },
        "french_stemmer": {
          "type": "stemmer",
          "language": "light_french"
        }
      },
      "tokenizer": {
        "char_group_tokenizer": {
          "type": "char_group",
          "tokenize_on_chars": [
            "whitespace",
            "punctuation"
          ]
        }
      },
      "analyzer": {
        "custom_keyword": {
          "type": "custom",
          "tokenizer": "keyword",
          "filter": [
            "lowercase",
            "icu_folding",
            "german_normalization"
          ]
        },
        "french": {
          "tokenizer": "icu_tokenizer",
          "filter": [
            "french_elision",
            "icu_folding",
            "french_stemmer"
          ]
        },
        "default": {
          "type": "custom",
          "tokenizer": "char_group_tokenizer",
          "filter": [
            "lowercase",
            "icu_folding",
            "german_normalization"
          ]
        },
        "autocomplete": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "icu_normalizer",
            "icu_folding",
            "french_elision",
            "italian_elision",
            "edge_ngram_filter"
          ]
        },
        "identifier-analyzer": {
          "tokenizer": "keyword",
          "char_filter": [
            "hyphen-filter"
          ],
          "filter": [
            "lowercase"
          ]
        }
      },
      "normalizer": {
        "sort_normalizer": {
          "type": "custom",
          "filter": [
            "lowercase"
          ]
        }
      },
      "char_filter": {
        "hyphen-filter": {
          "type": "pattern_replace",
          "pattern": "-",
          "replacement": ""
        }
      }
    }
  }
}
